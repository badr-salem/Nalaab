@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">قائمة أكواد الخصم</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; إضافة كود خصم جديد</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>كود الخصم</th>
                    <th>نوع الخصم</th>
                    <th>قيمة الخصم</th>
                    <th>الحد الأدنى</th>
                    <th>هل الكود فعال ؟</th>
                    <th></th>
                    

                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
               
                    @if (item.CouponType == "0")
                    {
                        var nasba = "نسبة";
                        item.CouponType = nasba;
            <td>
                @Html.DisplayFor(m => item.CouponType)
            </td>
            <td>
                @Html.DisplayFor(m=>item.Discount)
                %
            </td>
                    }
                    else
                    {
                        if (item.CouponType == "1")
                        {
                            var qema = "قيمة";
                            item.CouponType = qema;
            <td>
                @Html.DisplayFor(m => item.CouponType)
            </td>
            <td>
                @Html.DisplayFor(m => item.Discount)
                ريال
            </td>
                        }
                    }
              
              
              


                <td>
                    @Html.DisplayFor(m => item.MinimumAmount)
                </td>
                <td>

                    @if (item.IsActive == true)
                    {
                        <i class="fa fa-check-square" style="color:green; font-size:x-large" aria-hidden="true"></i>

                    }
                    else
                    {
                        <i class="fa fa-times" style="color:red;font-size:x-large" aria-hidden="true"></i>

                    }



                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-success text-white" asp-action="Upsert" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
                }
            </thead>
        </table>
    </div>

}
else
{
    <p>لايوجد كوبونات خصم حاليا</p>
}




