@model Nalaab.Models.ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Product.Title</h1>
                    <p class="text-warning">by @Model.Product.ProductionCompany</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                    <span class="badge badge-warning pt-2" style="height:30px;"> + @Model.Product.AgeGroup.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <div class="text-center">
                                <img src="@Model.Product.ImageUrl" width="100%" height="100%" class="rounded" />
                            </div>
                        </div>
                        <div class="col-4">
                           
                        </div>
                        
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row text-left pl-2" style="color:green; font-weight:bold">
                                <div class="p-1 col-4">
                                    <div>السعر: @Model.Product.Price ريال</div>
                                </div>
                              

                            </div>
                            <br />
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            @*<div class="row pl-2">
                                <div class="col-2 text-primary">العدد</div>
                                <div class="col-10"><input class="form-control" asp-for="Count" /></div>
                            </div>*@
                        </div>
                        
                    </div>

                    <div class="row">
                        <div class="col-8">
                            <h4 class="text-primary d-inline">العدد :  </h4> &nbsp; <input class="form-group" asp-for="Count" />

                        </div>
                        <div class="col-2"></div>

                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-primary form-control  btn-square btn-lg" style="height:50px;">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i> &nbsp;
                            العودة للقائمة
                        </a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">

                        <button type="submit" value="أضف إلى السلة" class="btn btn-success btn-square btn-lg form-control" style="height:50px;">
                            أضف إلى السلة &nbsp;
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>